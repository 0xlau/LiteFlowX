<idea-plugin require-restart="false" allow-bundled-update="true" url="https://gitee.com/liupeiqiang/LiteFlowX">
    <id>top.xystudio.plugin.idea.LiteFlowX</id>
    <name>LiteFlowX</name>
    <vendor email="237972113@qq.com" url="https://gitee.com/liupeiqiang/LiteFlowX">Coder-XiaoYi</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">

        <dom.fileMetaData id="liteflowx.FlowDescription" rootTagName="flow" implementation="top.xystudio.plugin.idea.liteflowx.dom.description.FlowDescription"/>

        <!-- xml 跳转到 component -->
        <codeInsight.lineMarkerProvider id="liteflowx.XmlComponentLineMarkerProvider" language="XML"
                                        implementationClass="top.xystudio.plugin.idea.liteflowx.provider.XmlComponentLineMarkerProvider"/>

        <!-- xml 跳转到 chain -->
        <codeInsight.lineMarkerProvider id="liteflowx.XmlChainLineMarkerProvider" language="XML"
                                        implementationClass="top.xystudio.plugin.idea.liteflowx.provider.XmlChainLineMarkerProvider"/>

        <!-- xml 跳转到 node -->
        <codeInsight.lineMarkerProvider id="liteflowx.XmlNodeLineMarkerProvider" language="XML"
                                        implementationClass="top.xystudio.plugin.idea.liteflowx.provider.XmlNodeLineMarkerProvider"/>

        <!-- xml node 跳转到 class -->
        <codeInsight.lineMarkerProvider id="liteflowx.XmlNodeToClassLineMarkerProvider" language="XML"
                                        implementationClass="top.xystudio.plugin.idea.liteflowx.provider.XmlNodeToClassLineMarkerProvider"/>

        <!-- json 跳转到 component -->
        <codeInsight.lineMarkerProvider id="liteflowx.JsonComponentLineMarkerProvider" language="JSON"
                                        implementationClass="top.xystudio.plugin.idea.liteflowx.provider.JsonComponentMarkerProvider"/>

        <!-- json 跳转到 chain -->
        <codeInsight.lineMarkerProvider id="liteflowx.JsonChainLineMarkerProvider" language="JSON"
                                        implementationClass="top.xystudio.plugin.idea.liteflowx.provider.JsonChainMarkerProvider"/>

        <!-- json node 跳转到 class -->
        <codeInsight.lineMarkerProvider id="liteflowx.JsonNodeToClassLineMarkerProvider" language="JSON"
                                        implementationClass="top.xystudio.plugin.idea.liteflowx.provider.JsonNodeToClassLineMarkerProvider"/>

        <!-- xml 自动完成 -->
        <completion.contributor
                language="XML"
                implementationClass="top.xystudio.plugin.idea.liteflowx.contributor.XmlCompletion"/>

        <!-- json 自动完成 -->
        <completion.contributor
                language="JSON"
                implementationClass="top.xystudio.plugin.idea.liteflowx.contributor.JsonCompletion"/>


    </extensions>

</idea-plugin>